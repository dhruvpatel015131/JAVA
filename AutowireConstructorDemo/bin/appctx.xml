<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="person" class="in.ac.famt.Person">
        <constructor-arg name="name" value="Tejas"></constructor-arg>
        <constructor-arg name="address" value="Ratnagiri"></constructor-arg>
        <constructor-arg name="age" value="10"></constructor-arg>
    </bean>
    
    <bean id="CustomerBean1" class="in.ac.famt.Customer" autowire="constructor">
        <constructor-arg name="action" value="buy"></constructor-arg>
        <constructor-arg name="type" value="10"></constructor-arg>
    </bean>
    
</beans>
